{
  "name": "one-light-ui",
  "theme": "ui",
  "version": "1.1.9",
  "description": "Atom One light UI theme",
  "keywords": [
    "light",
    "adaptive",
    "ui"
  ],
  "repository": "https://github.com/atom/one-light-ui.git",
  "license": "MIT",
  "main": "lib/main",
  "engines": {
    "atom": ">0.40.0"
  },
  "devDependencies": {
    "coffeelint": "^1.9.7"
  },
  "configSchema": {
    "fontSize": {
      "title": "Font Size",
      "description": "Change the UI font size. Needs to be between 8 and 20.",
      "type": ["integer", "string"],
      "minimum": 8,
      "maximum": 20,
      "default": "Auto"
    },
    "layoutMode": {
      "title": "Layout Mode",
      "description": "In Auto mode, the UI will automatically adapt based on the window size.",
      "type": "string",
      "default": "Auto",
      "enum": [
        "Compact",
        "Auto",
        "Spacious"
      ]
    }
  }
}
